// Hero section styles
// Note: Most styles are now handled by Tailwind classes directly in the component
// This file is kept for any custom styles that can't be achieved with Tailwind

// Global font family for hero section
:global(.hero)
  font-family var(--font-montserrat)

// Custom animations or complex styles can be added here if needed
.heroGradient
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background radial-gradient(circle at center, rgba(50, 50, 50, 0.3) 0%, rgba(0, 0, 0, 0) 70%)
  z-index 0

// Any custom button styles not easily achieved with Tailwind
.buttonArrow
  transition transform 0.2s ease

  &:hover
    transform translateX(2px)
